#include <stdio.h>
#include <string.h>
#include <string.h>

void writeToFile() {
   FILE * f = fopen("input.txt", "w");
   char c;
   while ((c = getchar()) != '#') {
      fputc(c, f);
   }
   fclose(f);
}
int main()
{
    writeToFile();
    FILE *f;
    if ((f = fopen("input.txt" , "r")) == NULL)
    {
        printf("File error");
        return -1;
    }
    char line[100];
    int b = 0,w = 1;
    while(fgets(line,100,f) != NULL)
    {
        line[strlen(line)-1] = '\0';
        b = strlen(line);
        for(int i  = 0; i < strlen(line); i++)
        {
            if(line[i] == ' ')
            {
                b--;
                w++;
            }
        }
        printf("%d, %d:%s",b,w,line);
    }
    fclose(f);
    return 0;
}
